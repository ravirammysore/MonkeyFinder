<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"                            
             x:Name="contentPageMain"
             x:Class="MonkeyFinder.View.MainPage">
        
    <VerticalStackLayout  Spacing="10" Padding="5">
        
        <Label Text="Monkey Details" FontSize="Header"/>
        
        <Label x:Name="lblName" Text="{Binding Name}" FontSize="Body"/>

        <Label x:Name="lblDetails" Text="{Binding Details}" FontSize="Body"/>

        <Button x:Name="btnShow" Text="Show" Clicked="btnShow_Clicked"/>
        
    </VerticalStackLayout>

</ContentPage>
